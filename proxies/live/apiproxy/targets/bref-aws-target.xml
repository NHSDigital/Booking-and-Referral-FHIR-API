<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="booking-and-referral-aws-target">
  <PreFlow>
    <Request>
      <Step>
        <Name>VerifyAPIKey.CustomAttributes</Name>
      </Step>
      <Step>
        <Name>ExtractVariables.GetProductId</Name>
      </Step>
      <Step>
        <Name>AssignMessage.GetProductIdAttribute</Name>
      </Step>
      <Step>
        <Name>RaiseFault.403InvalidProduct</Name>
        <Condition>!(extracted.headerValue == AppProductId)</Condition>
      </Step>
    </Request>
  </PreFlow>
  <DefaultFaultRule>
      <Step>
        <Name>ExtractVariables.OperationOutcomeCode</Name>
      </Step>
      <Step>
        <Name>Javascript.HandleErrors</Name>
      </Step>
      <Step>
        <Name>AssignMessage.SetErrorResponse</Name>
      </Step>
  </DefaultFaultRule>
  <HTTPTargetConnection>
    <URL>{{ DOMAIN_ENDPOINT }}</URL>
    <SSLInfo>
      <Enabled>true</Enabled>
      <ClientAuthEnabled>true</ClientAuthEnabled>
      <KeyStore>ref://bars-client</KeyStore>
      <KeyAlias>cert</KeyAlias>
    </SSLInfo>
    <Properties>
      <Property name="supports.http10">true</Property>
      <Property name="request.retain.headers">User-Agent,Referer,Accept-Language</Property>
      <Property name="retain.queryparams">apikey</Property>
    </Properties>
  </HTTPTargetConnection>
</TargetEndpoint>
